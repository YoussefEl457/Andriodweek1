<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/iv_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".QuizUitslag">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="171dp"
        android:src="@drawable/daquiz" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/optie_border"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Quiz resultaat:"
        />

    <RelativeLayout
        android:layout_width="324dp"
        android:layout_height="305dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/medaille"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/gold" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="30sp"
            android:text="10/10"
            android:textColor="@color/black" />
    </RelativeLayout>

    <Button
        android:id="@+id/quiz_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:text="Finish"
        android:textSize="20dp"
        />


</LinearLayout>